{
    "manifest_version": 2,
    "name": "Bandwidth Tracker",
    "version": "1.0",
    "permissions": [
      "webRequest",
      "storage",
      "alarms",
      "<all_urls>"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true  // Change this to true
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  